# ============================================================
# ROOFING BOOKS CFO - ENVIRONMENT VARIABLES
# ============================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!
# ============================================================

# ------------------------------------------------------------
# QUICKBOOKS ONLINE
# Get these from https://developer.intuit.com
# ------------------------------------------------------------
QBO_CLIENT_ID=your_client_id_here
QBO_CLIENT_SECRET=your_client_secret_here
QBO_REDIRECT_URI=http://localhost:8000/auth/qbo/callback
QBO_ENVIRONMENT=sandbox
# Options: sandbox, production

# ------------------------------------------------------------
# SUPABASE
# Get these from https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# ------------------------------------------------------------
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# Service key is for backend only - has full access, keep it secret!

# ------------------------------------------------------------
# ANTHROPIC (Claude API)
# Get from https://console.anthropic.com
# ------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-...

# ------------------------------------------------------------
# OPENAI (Optional - fallback for classification)
# Get from https://platform.openai.com
# ------------------------------------------------------------
# OPENAI_API_KEY=sk-...

# ------------------------------------------------------------
# SLACK NOTIFICATIONS
# Create app at https://api.slack.com/apps
# ------------------------------------------------------------
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX
SLACK_CHANNEL=#bookkeeping-alerts

# ------------------------------------------------------------
# EMAIL (Optional - for AR reminders, CFO briefs)
# Using Resend (https://resend.com) - free tier: 3000/month
# ------------------------------------------------------------
# RESEND_API_KEY=re_...
# RESEND_FROM_EMAIL=Friday Payday <noreply@yourdomain.com>

# ------------------------------------------------------------
# SMS (Optional - for Friday Payday SMS reminders)
# Using Twilio (https://twilio.com)
# ------------------------------------------------------------
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=your_auth_token_here
# TWILIO_FROM_NUMBER=+1234567890

# ------------------------------------------------------------
# AVALARA TAX (Optional - Phase 2)
# Get from https://developer.avalara.com
# ------------------------------------------------------------
# AVALARA_ACCOUNT_ID=your_account_id
# AVALARA_LICENSE_KEY=your_license_key
# AVALARA_ENVIRONMENT=sandbox

# ------------------------------------------------------------
# APPLICATION SETTINGS
# ------------------------------------------------------------
APP_ENV=development
# Options: development, staging, production

LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR

SECRET_KEY=generate-a-random-32-char-string-here
# Used for session encryption - generate with: openssl rand -hex 32

CRON_SECRET=generate-a-random-string-for-cron-auth
# Used to authenticate cron job requests (Friday Payday automation)

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Dashboard (Streamlit)
STREAMLIT_PORT=8501
