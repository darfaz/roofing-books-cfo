# docker-compose.override.yml
# Copy this to docker-compose.override.yml and customize for local development
# This file is automatically merged with docker-compose.yml by docker-compose
# Use it to override settings without modifying the main compose file

version: '3.8'

services:
  # Override API for local development
  api:
    volumes:
      - ./src:/app/src
      - ./tests:/app/tests
      # Add any additional volumes you need

  # Override dashboard for local development
  dashboard:
    environment:
      - STREAMLIT_SERVER_ENABLE_CORS=true
      - STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

  # Uncomment to always start PostgreSQL (remove from profiles)
  # postgres:
  #   profiles: []

